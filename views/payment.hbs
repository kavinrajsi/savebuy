<div class="row justify-content-center">
  <div class="col-6">
    {{#each o}}
      <form id="redirectForm" method="post" action="/paymentRequest">
        <div class="card mb-3">
          <div class="card-header">
            <div class="form-group">
              <label>App ID:</label><br />
              {{!-- <input type="text" name="appId" value="1261639797dbdafd67a49efd1e361621" class="live form-control" /> --}}
              <input type="text" name="appId" value="79490d552361c019c4ee021cf09497" class="test form-control" />
            </div>
            <div class="form-group">
              <label>Order ID:</label><br />
              <input type="text" name="orderId" value="{{this.orderid}}" class="form-control" />
            </div>
            <div class="form-group">
              <label>Order Amount:</label><br />
              <input type="text" name="orderAmount" value="{{this.orderamount}}" class="form-control" />
            </div>
            <div class="form-group">
              <label>Order Currency:</label><br />
              <input type="text" name="orderCurrency" value="INR" class="form-control" />
            </div>
            <div class="form-group">
              <label>Order Note:</label><br />
              <input type="text" name="orderNote" value="{{this.ordernote}}" class="form-control" />
            </div>
            <div class="form-group">
              <label>Name:</label><br />
              <input type="text" name="customerName" value="{{this.customername}}" class="form-control" />
            </div>
            <div class="form-group">
              <label>Email:</label><br />
              <input type="email" name="customerEmail" value="{{this.customeremail}}" class="form-control" />
            </div>
            <div class="form-group">
              <label>Phone:</label><br />
              <input type="text" name="customerPhone" value="{{this.customerphone}}" class="form-control" />
            </div>
            <div class="form-group">
              <label>Return URL:</label><br />
              <input
                name="returnUrl"
                value="https://www.sundarisilksindia.in/success"
                placeholder="Enter the URL to which customer will be redirected (Ex. www.example.com)"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label>Notify URL:</label><br />
              <input
                name="notifyUrl"
                value="https://www.sundarisilksindia.in/response"
                placeholder="Enter the URL to get server notificaitons (Ex. www.example.com)"
                class="form-control"
              />
            </div>
          </div>
          <div class="card-body">
            <div class="">
              <h5 class="card-title">
                <span>Order Terms :</span>
                <span>{{this.orderterm}}</span>
              </h5>
            </div>
            <h6 class="card-subtitle mb-2 text-muted">
              <span>Order for Month :</span>
              <span>{{this.ordermonth}}</span>
            </h6>
            <h6 class="card-subtitle mb-2 text-muted">
              <span>Order Amount :</span>
              <span>{{this.orderamount}}</span>
            </h6>
          </div>

          <div class="card-footer">
            <button type="submit" value="Pay" class="mt-3 btn btn-primary btn-block">Submit</button>
          </div>
        </div>
      </form>
    {{/each}}
  </div>
</div>
